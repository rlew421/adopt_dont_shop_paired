<h1 align= "center">Edit a Review for <%= @review.shelter.name %></h1>

<center>
  <%= form_tag "/shelters/#{@review.shelter.id}/reviews/#{@review.id}", method: :patch do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, "#{@review.title}" %>

    <%= label_tag :rating %>
    <%= text_field_tag :rating, "#{@review.rating}"  %>

    <%= label_tag :content %>
    <%= text_field_tag :content, "#{@review.content}"  %>

    <%= label_tag :image %>
    <%= text_field_tag :image, "#{@review.image}"  %>

    <%= submit_tag "Update Review" %>
  <% end %>
</center>
